<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">釣果を入力</h2>
    <%= form_with local: true do |f| %>

    <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
    <%# render 'shared/error_messages', model: f.object %>
    <%# //インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :hoge, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        釣果情報
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :hoge, class:"items-text", id:"item-name", placeholder:"釣果情報（必須 40文字まで)  例(タイが釣れました。)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          釣果情報の説明
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_area :hoge, class:"items-text", id:"item-info", placeholder:"釣果情報の説明（任意 1,000文字まで）  例(休日に堤防で釣りをしていたところタイが釣れました。)" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="fish-information">釣果データ</div>
      <div class="form">
        <div class="weight-bold-text">
          釣れた日
          <span class="indispensable">必須</span>
        </div>
          <div class='input-birth-wrap'>
            <%= raw sprintf(
                    f.date_select(
                      :hoge,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 2030,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        <div class="weight-bold-text">
          魚種
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :hoge, class:"items-fish", id:"item-name", placeholder:"（必須 20文字まで)", maxlength:"20" %>
        <div class="weight-bold-text">
          サイズ
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_area :hoge, class:"items-size", id:"item-name", maxlength:"5" %><span class="size-cm"> cm</span>
        <div class="weight-bold-text">
          重さ
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_area :hoge, class:"items-weight", id:"item-name", maxlength:"5" %><span class="weight-Kg"> Kg</span>
        <div class="weight-bold-text">
          匹数
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_area :hoge, class:"items-number", id:"item-name", maxlength:"3" %><span class="number-fish"> 匹</span>
        <div class="weight-bold-text">
          都道府県
          <span class="indispensable">任意</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
        <div class="weight-bold-text">
          エリア
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :hoge, class:"items-area", id:"item-name", placeholder:"（必須 20文字まで)", maxlength:"20" %>
      </div>
    </div>
    <%# /商品の詳細 %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>